<!DOCTYPE html>
<html class="no-js" lang="">
<head>
    <!-- Rendered with Eco -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="X-UA-TextLayoutMetrics" content="snap-vertical" />
    <meta http-equiv="X-UA-CSSOMElementFloatMetrics" content="false" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Site Properities -->
    <title><%= @site.title %></title>
    <meta name="description" content="<%= @site.description %>" />
    <meta name="keywords" content="<%= @site.keywords %>" />

    <!-- DocPad Meta -->
    <%- @getBlock('meta').toHTML() %>

    <!-- DocPad Styles + Our Own -->
    <%- @getBlock('styles').add(@getUrl(@site.styles)).add(@getUrl(@document.styles)).toHTML() %>

    <script src="<%= @getUrl('/vendor/modernizr/modernizr.min.js') %>"></script>
    <script src="<%= @getUrl('/icons/svg-icons.js') %>"></script>
</head>
<body data-spy="scroll" data-target=".local-nav" data-offset="80">
    <%= @partial('site/svgcontainer') %>

    <nav class="offcanvas-menu navmenu navmenu-accordeon navmenu-fixed-right" role="navigation">
        <button type="button" class="navbar-close" data-toggle="offcanvas" data-recalc="false" data-target=".offcanvas-menu" data-canvas=".page-canvas">
            <svg xmlns="http://www.w3.org/2000/svg" class="i i--close"><use xlink:href="#i--close"></use></svg>
            Close
        </button>
        <%- @partial('site/offscreenmenu') %>
        <div class="offscreen-promo">
            <a href="#" class="offscreen-promo--link"><img class="offscreen-promo--link-icon" src="<%= @getUrl('/img/1S-free-for-calling-100x100.png') %>" alt="$1 Free Trial"><strong>$1 Free Trial</strong> for New International Calling Customers</a>
        </div>
    </nav>

    <div class="allpage page-canvas">
        <header class="allpage--header">
            <div class="allpage--headerbg"></div>
            <div class="allpage--headerbg2"></div>
            <div class="container">
                <div class="logo">
                    <a class="logo--link" href="<%= @getUrl('/') %>"><img src="<%= @getUrl('/img/logo-bossrevolution.png') %>" alt="BossRevolution"></a>
                </div>

                <nav class="navbar navbar-topline">
                    <p class="navbar-left navbar--text hidden-xs">
                        <a href="#">$1 FREE TRIAL <span class="hidden-sm">FOR NEW INTERNATIONAL CALLING CUSTOMERS</span></a>
                    </p>
                    <%- @partial("site/topline-menu") %>
                </nav>

                <nav class="navbar navbar-bossmain hidden-xs" role="navigation">
                    <%- @partial('site/mainmenu') %>
                </nav>
            </div>
        </header>

        <div class="allpage--body">
            <%- @content %>
        </div>

        <%- @partial('site/allpagefooter') %>

    </div>

    <!-- DocPad Scripts + Our Own -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <%- @getBlock('scripts').add(@getUrl(@site.scripts)).add(@getUrl(@document.scripts)).toHTML() %>
</body>
</html>
